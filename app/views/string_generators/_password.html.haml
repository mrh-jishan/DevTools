=turbo_frame_tag "password" do
  .card{"data-clipboard-success-content-value" => "Copied!", "data-controller" => "clipboard"}
    .card-header
      .card-title
        = "Your New Passwords"
    .card-body
      .px-2{data: { controller: "codemirror", "clipboard-target": "source", "codemirror-doc-value": generate_password(**@data)}}
    .card-footer
      .d-flex.gap-2.justify-content-end
        = button_tag "Copy the 1st Line", class: "btn btn-secondary btn-sm copy-first-line", type: "button",  "data-action" => "clipboard#copy", "data-clipboard-target" => "button"
        = button_tag "Copy ALL", class: "btn btn-primary btn-sm copy-all", type: "button", "data-action" => "clipboard#copy", "data-clipboard-target" => "button"

